<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">

<head>
    <meta http-equiv="content-type" content="text/html; charset=iso-8859-1" />
    <meta name="author" content="Oliver Robson" />

    <title>Zap: Register an account.</title>
    <link href="images/css/register.css" rel="stylesheet" type="text/css" />
</head>

<body>

<div class="center static relative">
	<div class="contentBox">
		<div class="boxHeader">Register at Zap Hotel</div>
		<div class="subHeader"></div>
		<form method="post">
			<div class="box1">
				<div class="left">
					<label for="name">Name</label>
						<br />
					<input type="text" name="bean_avatarName" id="name" style="width:160px" />
						<br />
					<label class="info"></label>
						<br /><br /><br /><br />
					<label for="password">Password</label>
						<br />
					<input type="password" name="bean_password" id="password" style="width:200px" />
						<br />
					<label class="info"></label>
						<br /><br /><br /><br />
					<label for="email">Email</label>
						<br />
					<input type="text" name="bean_email" id="email" style="width:240px" />
						<br />
					<label class="info"></label>
				</div>
				<div class="right">
					<label for="cpassword">Retype Password</label>
						<br />
					<input type="password" name="bean_retypedPassword" id="cpassword" style="width:260px" />
						<br />
					<label class="info"></label>
						<br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
					
					<input type="submit" value="Register" name="doSubmit"/>
				</div>
			</div>
		</form>
	</div>
</div>
</body>
</html>